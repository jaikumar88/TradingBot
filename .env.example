# Trading Bot Configuration
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ALLOWED_CHATS=chat_id_1,chat_id_2,chat_id_3
# Optional: Set up webhook for production
TELEGRAM_WEBHOOK_URL=

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Delta Exchange Configuration
# Get your API credentials from Delta Exchange
DELTA_API_KEY=your_delta_api_key_here
DELTA_API_SECRET=your_delta_api_secret_here
DELTA_BASE_URL=https://api.delta.exchange
DELTA_TESTNET=true
PAPER_TRADE=true

# Trading Configuration
DEFAULT_RISK_PERCENTAGE=2
MAX_POSITIONS=5
DEFAULT_LEVERAGE=1

# Database Configuration
DB_PATH=./data/trading.db

# Server Configuration
PORT=3000
HOST=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./data/app.log

# Environment
NODE_ENV=development