# Production Environment Configuration
# Copy this to .env.production and fill in your production values

# Application
NODE_ENV=production
PORT=3000

# Required API Keys for Production
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
OPENAI_API_KEY=your_production_openai_api_key

# Delta Exchange Production API
DELTA_API_KEY=your_production_delta_api_key
DELTA_SECRET=your_production_delta_secret
DELTA_PASSPHRASE=your_production_passphrase
DELTA_BASE_URL=https://api.india.delta.exchange

# Trading Configuration
PAPER_TRADING=false
RISK_PERCENTAGE=1
MAX_DAILY_LOSS=500
SLIPPAGE_TOLERANCE=0.01

# Security
SESSION_SECRET=generate_a_secure_random_string_here
CORS_ORIGIN=https://yourdomain.com

# Database (for cloud deployment)
DATABASE_URL=your_production_database_url

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Performance
MAX_CONCURRENT_TRADES=5
API_TIMEOUT=30000
REFRESH_INTERVAL=5000